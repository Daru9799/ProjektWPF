<UserControl x:Class="ProjektWPF.Views.MeasurementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektWPF.Views"
             xmlns:vm="clr-namespace:ProjektWPF.ViewModels"
             xmlns:conv="clr-namespace:ProjektWPF.ViewModels.Converters"
             xmlns:core="clr-namespace:ProjektWPF.Core"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="819.2">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <core:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <vm:EmptyStringToNullConverter x:Key="EmptyStringToNullConverter"/>
            <conv:DateOnlyConverter x:Key="DateOnlyConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="1.8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        
        <Image Source="/Style/Img/weightBackground.jpg" Stretch="UniformToFill" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
        <TextBlock Margin="40,25,0,5"  FontSize="65" Grid.ColumnSpan="3" Text="Pomiary" Foreground="black"/>
        <Border Background="Transparent" CornerRadius="40" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Margin="20">
                        <ListBox x:Name="ListViewProducts"
                     ItemsSource="{Binding ProgressesList}"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     BorderThickness="0"
                     Background="Transparent"
                     HorizontalContentAlignment="Center"
                     IsHitTestVisible="False">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="10" BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Border CornerRadius="10" BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}" BorderThickness="1">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Border CornerRadius="10" Background="#C02A629A" Margin="10">
                                                        <StackPanel Margin="10" HorizontalAlignment="Center" Width="200" Height="100">
                                                            <TextBlock Text="{Binding Date, Converter={StaticResource DateOnlyConverter}}" FontSize="12" TextWrapping="Wrap" TextAlignment="Right" Foreground="White"/>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                                                                <TextBlock FontSize="16" Foreground="White">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Waga: {0} kg">
                                                                            <Binding Path="Weight"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                                                                <TextBlock FontSize="16" Foreground="White">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Tkanka tłuszczowa: {0} %">
                                                                            <Binding Path="BodyFatPercentage"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                                                                <TextBlock FontSize="16" Foreground="White">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="BMI: {0}">
                                                                            <Binding Path="Bmi"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

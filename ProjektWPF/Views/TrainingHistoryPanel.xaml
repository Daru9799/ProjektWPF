                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                                <Grid>
                                    --><!-- Ustawiamy wartości stałe dla TextBlock --><!--
                                    <TextBlock Text="{Binding CaloriesBurned}" Margin="5"/>

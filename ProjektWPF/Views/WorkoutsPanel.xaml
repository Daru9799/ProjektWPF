<UserControl x:Class="ProjektWPF.Views.WorkoutsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektWPF.Views"
            
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Border Background="#2A629A" CornerRadius="50">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="PLANY TRENINGOWE" FontSize="50" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            <ListView Grid.Row="1" 
                      BorderBrush="Navy"
                      BorderThickness="3"
                      Margin="50,10"
                      ItemsSource="{Binding WorkoutPlansItemSource}"
                      SelectedItem="{Binding SelectedWorkoutPlan}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"
                                        DisplayMemberBinding="{Binding PlanId}"
                                        Width="30"/>
                        <GridViewColumn Header="Nazwa"
                            DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Całkowity czas"
                            DisplayMemberBinding="{Binding TotalTime}" />
                        <GridViewColumn Header="Spalone kalorie"
                            DisplayMemberBinding="{Binding TotalCaloriesBurned}" />
                        <GridViewColumn Header="Opis"
                            DisplayMemberBinding="{Binding Description}" />
                        <GridViewColumn Header="Data stworzenia"
                            DisplayMemberBinding="{Binding CreatedAt}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Grid.Row="2" Margin="50,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Trenuj" 
                        Grid.Column="0" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Command="{Binding SessionViewCommand}"/>

                <Button Content="Dodaj" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Content="Modyfikuj" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Content="Usuń" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>

        </Grid>
    </Border>

</UserControl>

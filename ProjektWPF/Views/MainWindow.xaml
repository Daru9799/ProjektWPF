<Window x:Class="ProjektWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektWPF"
        xmlns:vm="clr-namespace:ProjektWPF.ViewModels"
        mc:Ignorable="d"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="WorkoutAndFitness" Height="768" Width="1024" >
    <Window.DataContext>
        <vm:MainViewModel x:Name="MainViewModel"/>
    </Window.DataContext>
    <Border Background="#26355D" >
        <Grid>
            <!-- Menu boczne -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5">
                <Button Content="Profil" Margin="5" Height="30" FontSize="20" Command="{Binding ProfileViewCommand}" Visibility="{Binding LogOutVisibility}"></Button>
                <Button Content="Ćwiczenia" Margin="5" Height="30" FontSize="20" Command="{Binding ExercisesViewCommand}" Visibility="{Binding LogOutVisibility}"></Button>
                <!-- Plany treningowe mozna rozbic na kilka buttonów np jeden do tworzenia jeden do edycji etc. -->
                <Button Content="Plany Treningowe" Margin="5" Height="30" FontSize="20" Command="{Binding WorkoutsViewCommand}" Visibility="{Binding LogOutVisibility}"></Button>
                <Button Content="Trening" Margin="5" Height="30" FontSize="20" Command="{Binding SessionViewCommand}" Visibility="{Binding LogOutVisibility}" IsEnabled="False"></Button>
                <Button Content="Postępy" Margin="5" Height="30" FontSize="20" Command="{Binding ProgressViewCommand}" Visibility="{Binding LogOutVisibility}"></Button>
            </StackPanel>

            <!-- Dół Menu bocznego Logowanie i Rejestracja potem zamienia sie w jeden button Wyloguj -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Bottom">
                    <Button Content="Zaloguj się" Margin="5" FontSize="20" Command="{Binding LoginViewCommand}" Visibility="{Binding LogRegVisibility}"></Button>
                    <Button Content="Zarejestruj się" Margin="5" FontSize="20" Command="{Binding RegisterViewCommand}" Visibility="{Binding LogRegVisibility}"></Button>
                    <Button Content="Wyloguj się" Margin="5" FontSize="20" Command="{Binding LogOutClick}" Visibility="{Binding LogOutVisibility}"></Button>
                </StackPanel>
            </Grid>
            <!-- Panel odpowiedzalny za wyswietlanie podstron -->
            <ContentControl Grid.Column="1" Margin="10" Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
